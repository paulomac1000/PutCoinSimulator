@model IEnumerable<PutCoinSimulator.ViewModels.Home.PocketViewModel>
@{
    Layout = "";
}

<p>
    @if (Model == null)
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong> Pockets list not initialized!
        </div>
    }
    else if (!Model.Any())
    {
        <div class="alert alert-warning">
            <strong>Warning!</strong> Pockets list is empty
        </div>
    }
    else
    {
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Owner name</th>
                    <th>Account balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pocket in Model)
                {
                    <tr>
                        <td>@pocket.OwnerName</td>
                        <td>@Math.Round(pocket.AccountBalance, 1)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
</p>
